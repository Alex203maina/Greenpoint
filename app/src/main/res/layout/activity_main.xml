<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="#F5F5F5"
  tools:context="com.example.greenpoint.MainActivity">


  <ScrollView
    android:id="@+id/scrollView"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="24dp">

      <!-- Green Header Section -->
      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/green_gradient_bg"
        android:padding="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
          android:id="@+id/logo"
          android:layout_width="100dp"
          android:layout_height="100dp"
          android:src="@drawable/recycle"
          android:contentDescription="Recycle Logo"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/appName"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="EcoRecycle"
          android:textSize="32sp"
          android:textStyle="bold"
          android:textColor="#FFFFFF"
          android:layout_marginTop="12dp"
          app:layout_constraintTop_toBottomOf="@id/logo"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/tagline"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Turn your waste into wealth while saving the planet"
          android:textSize="16sp"
          android:textColor="#FFFFFF"
          android:gravity="center"
          android:layout_marginTop="8dp"
          app:layout_constraintTop_toBottomOf="@id/appName"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/statsRow"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          app:layout_constraintTop_toBottomOf="@id/tagline"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">

          <TextView
            android:id="@+id/usersStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="50K+\nUsers"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/centersStat"
            app:layout_constraintWidth_percent="0.33" />

          <TextView
            android:id="@+id/centersStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="500+\nCenters"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/usersStat"
            app:layout_constraintEnd_toStartOf="@id/earnedStat"
            app:layout_constraintWidth_percent="0.33" />

          <TextView
            android:id="@+id/earnedStat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$2M+\nEarned"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/centersStat"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_percent="0.33" />
        </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <!-- White Card Section -->
      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/whiteCardSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerSection">

        <TextView
          android:id="@+id/whyChooseTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginBottom="16dp"
          android:text="Why Choose EcoRecycle?"
          android:textColor="#000000"
          android:textSize="20sp"
          android:textStyle="bold"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toTopOf="parent" />

        <!-- First Features Row -->
        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/featuresRow1"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/whyChooseTitle">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/findCenters"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/bestPrices"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
              android:id="@+id/findCentersIcon"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:contentDescription="Find Centers"
              android:src="@drawable/ic_location"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/findCentersTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Find Centers"
              android:textColor="#000000"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/findCentersIcon" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:text="Locate nearby recycling centers with real-time availability"
              android:textColor="#666666"
              android:textSize="12sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/findCentersTitle" />
          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/bestPrices"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/findCenters"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
              android:id="@+id/bestPricesIcon"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:contentDescription="Best Prices"
              android:src="@drawable/ic_money"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/bestPricesTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Best Prices"
              android:textColor="#000000"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/bestPricesIcon" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:text="Compare prices across centers to maximize your earnings"
              android:textColor="#666666"
              android:textSize="12sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/bestPricesTitle" />
          </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Second Features Row -->
        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/featuresRow2"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/featuresRow1">

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/homeCollection"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@id/earnRewards"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
              android:id="@+id/homeCollectionIcon"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:contentDescription="Home Collection"
              android:src="@drawable/ic_truck"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/homeCollectionTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Home Collection"
              android:textColor="#000000"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/homeCollectionIcon" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:gravity="center"
              android:text="Schedule Convenient pickup from your doorstep"
              android:textColor="#666666"
              android:textSize="12sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/homeCollectionTitle" />
          </androidx.constraintlayout.widget.ConstraintLayout>

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/earnRewards"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/homeCollection"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_percent="0.5">

            <ImageView
              android:id="@+id/earnRewardsIcon"
              android:layout_width="48dp"
              android:layout_height="48dp"
              android:contentDescription="Earn Rewards"
              android:src="@drawable/ic_rewards"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent" />

            <TextView
              android:id="@+id/earnRewardsTitle"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="8dp"
              android:text="Earn Rewards"
              android:textColor="#000000"
              android:textSize="16sp"
              android:textStyle="bold"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/earnRewardsIcon" />

            <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_marginTop="4dp"
              android:layout_marginBottom="1dp"
              android:gravity="center"
              android:text="Get badges and achievements for your eco-friendly actions"
              android:textColor="#666666"
              android:textSize="12sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toBottomOf="@id/earnRewardsTitle" />
          </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Impact Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
          android:id="@+id/impactSection"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_marginTop="1dp"
          android:background="@drawable/rounded_bg"
          android:padding="16dp"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintTop_toBottomOf="@id/featuresRow2">

          <ImageView
            android:id="@+id/leafIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Leaf Icon"
            android:src="@drawable/ic_leaf"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

          <TextView
            android:id="@+id/impactTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Impact Matters"
            android:textColor="#212121"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/leafIcon" />

          <TextView
            android:id="@+id/impactDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingTop="8dp"
            android:text="Every item you recycle contributes to a cleaner environment. Track your CO₂ savings and see the difference you're making."
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/impactTitle" />

          <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/impactStats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/impactDescription">

            <TextView
              android:id="@+id/tonsRecycled"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="2.5M\nTons Recycled"
              android:textColor="#212121"
              android:textSize="16sp"
              app:layout_constraintEnd_toStartOf="@id/treesSaved"
              app:layout_constraintStart_toStartOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent="0.33" />

            <TextView
              android:id="@+id/treesSaved"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="15K\nTrees Saved"
              android:textColor="#212121"
              android:textSize="16sp"
              app:layout_constraintEnd_toStartOf="@id/satisfaction"
              app:layout_constraintStart_toEndOf="@id/tonsRecycled"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent="0.33" />

            <TextView
              android:id="@+id/satisfaction"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:gravity="center"
              android:text="98%\nSatisfaction"
              android:textColor="#212121"
              android:textSize="16sp"
              app:layout_constraintEnd_toEndOf="parent"
              app:layout_constraintStart_toEndOf="@id/treesSaved"
              app:layout_constraintTop_toTopOf="parent"
              app:layout_constraintWidth_percent="0.33" />
          </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
      </androidx.constraintlayout.widget.ConstraintLayout>

      <!-- User Testimonials Section -->
      <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/testimonialSection"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:background="@drawable/rounded_background"
        app:layout_constraintTop_toBottomOf="@id/whiteCardSection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
          android:id="@+id/testimonialTitle"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="What Our Users Say"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textColor="#1E1E1E"
          android:paddingBottom="20dp"
          app:layout_constraintTop_toTopOf="parent"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <LinearLayout
          android:id="@+id/starsLayout"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:paddingBottom="16dp"
          app:layout_constraintTop_toBottomOf="@id/testimonialTitle"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent">

          <ImageView
            android:layout_width="30dp"

            android:layout_height="24dp"
            android:src="@drawable/star_icon"
            android:contentDescription="Star Icon"
            app:tint="#FFCA28" />
          <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/star_icon"
            android:contentDescription="Star Icon"
            app:tint="#FFCA28" />
          <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/star_icon"
            android:contentDescription="Star Icon"
            app:tint="#FFCA28" />
          <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/star_icon"
            android:contentDescription="Star Icon"
            app:tint="#FFCA28" />
          <ImageView
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/star_icon"
            android:contentDescription="Star Icon"
            app:tint="#FFCA28" />
        </LinearLayout>

        <TextView
          android:id="@+id/testimonialText"
          android:layout_width="0dp"
          android:lineHeight="30sp"
          android:layout_height="wrap_content"
          android:text="EcoRecycle has made recycling so convenient! I’ve earned over $300 this month while helping the environment. Highly recommended!"
          android:textSize="16sp"
          android:textColor="#424242"
          android:gravity="center"
                    android:paddingHorizontal="16dp"
          android:paddingBottom="8dp"
          app:layout_constraintTop_toBottomOf="@id/starsLayout"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/testimonialAuthor"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="- Sarah M, Regular User"
          android:textSize="15sp"
          android:textColor="#757575"
          android:textStyle="italic"

          android:paddingBottom="24dp"
          app:layout_constraintTop_toBottomOf="@id/testimonialText"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <View
          android:id="@+id/dividerLine"
          android:layout_width="0dp"
          android:layout_height="5dp"
          android:background="@drawable/divider_line"
          app:layout_constraintTop_toBottomOf="@id/testimonialAuthor"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          android:layout_marginTop="0dp"
          android:layout_marginBottom="20dp"/>


        <TextView
          android:id="@+id/readyToStart"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ready to Start Recycling?"
          android:textSize="24sp"
          android:textStyle="bold"
          android:textColor="#1E1E1E"
          android:paddingBottom="12dp"
          app:layout_constraintTop_toBottomOf="@id/dividerLine"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
          android:id="@+id/joinText"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:text="Join thousands of users who are earning money while making a difference"
          android:textSize="16sp"
          android:textColor="#78909C"
          android:gravity="center"

          android:paddingBottom="16dp"
          app:layout_constraintTop_toBottomOf="@id/readyToStart"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <Button
          android:id="@+id/getStartedButton"
          android:layout_width="200dp"
          android:layout_height="48dp"
          android:text="GET STARTED"
          android:textSize="16sp"
          android:textColor="#FFFFFF"
          android:background="@drawable/button_background"
          android:padding="8dp"
          app:layout_constraintTop_toBottomOf="@id/joinText"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />

        <TextView
          android:id="@+id/loginText"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Already have an account? >"
          android:textSize="14sp"
          android:textColor="#0288D1"

          android:paddingTop="12dp"
          app:layout_constraintTop_toBottomOf="@id/getStartedButton"
          app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" />
      </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
  </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
